#!/bin/bash
# Runs system wide ansible configured in /etc
set -eu

. /etc/default/$1

if [[ -z "${ANSIBLE_SERIALIZED:-}" ]] ; then
    export ANSIBLE_SERIALIZED=1
    exec run-one $0 "$@"
fi

set +u
. /opt/ansible/bin/activate
set -u

playbook=$(basename $ANSIBLE_PLAYBOOK)
timestamp=$(date +%Y%m%d%H%M%S)
logfile="/var/www/html/cron-logs/$1/ansible_${playbook}_${timestamp}.log"

cd $ANSIBLE_ROOT
trap "rm -f /var/www/html/cron-logs/$1/ansible_${playbook}_latest.log; ln -s $logfile /var/www/html/cron-logs/$1/ansible_${playbook}_latest.log" EXIT

date 2>&1 | tee $logfile
basename "$logfile" | tee -a $logfile
git pull 2>&1 | tee -a $logfile
ansible-galaxy install -r requirements.yml | tee -a $logfile
ansible-playbook -i $ANSIBLE_INVENTORY $ANSIBLE_PLAYBOOK | tee -a $logfile
date | tee -a $logfile

# Remove > 10 days old
RMLOG=/var/www/html/cron-logs/$1/removal_${timestamp}.log
find /var/www/html/cron-logs/$1 -type f -name '*.log' -mtime 10 -exec rm -f {} \; > $RMLOG 2>&1
